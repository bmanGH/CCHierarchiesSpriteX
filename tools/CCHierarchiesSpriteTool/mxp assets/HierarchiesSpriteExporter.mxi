<?xml version="1.0" encoding="UTF-8"?>
<macromedia-extension
	 name="HierarchiesSpriteExporter"
	 version="0.29.2"
	 type="other"
	 requires-restart="true">

	<author name="bman (zx123xz321hm3@hotmail.com)" />

	<products>
		<product name="Flash" version="12" primary="true" />
	</products>

	<description>
	<![CDATA[
CCHierarchiesSprite data exporter
<br>
<br>
This extension is compatible with Flash CS6 and higher.
<br>
	]]>
	</description>

	<ui-access>
	<![CDATA[
CCHierarchiesSpriteExporter
<br>
CCHierarchiesSprite data exporter
<br>
use 'Window > Other Panels > CCHierarchiesSpriteExporter' to open panel<br>
<br>
This extension is compatible with Flash CS6 and higher.
<br>
	]]>
	</ui-access>

