	<files>			
		<!-- install jsfl -->
		<file name="jsfl\HierarchiesSpriteAnimationPreprocess.jsfl" destination="$flash/HierarchiesSpriteExporter/jsfl" />
		<file name="jsfl\HierarchiesSpriteAnimationExporter.jsfl" destination="$flash/HierarchiesSpriteExporter/jsfl" />
	
		<!-- install the locale xml files-->
		<file name="locale\en.xml" destination="$flash/HierarchiesSpriteExporter/locale" />
		<file name="locale\zh-CN.xml" destination="$flash/HierarchiesSpriteExporter/locale" />
			
		<!-- install panel swf -->
		<file name="HierarchiesSpriteExporterPanel.swf" destination="$flash/WindowSWF" />	
